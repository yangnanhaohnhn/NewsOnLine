    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- 标题栏颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SpotsDialogDefault" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">处理数据中,请稍后…</item>
        <item name="DialogSpotCount">5</item>
    </style>

    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="line_style_color">
        <item name="android:background">@color/color_e6e6e6</item>
    </style>

    <style name="line_style" parent="line_style_color">
        <item name="android:layout_width">@dimen/base1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="line_10dp_style" parent="line_style_color">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base10dp</item>
    </style>

    <style name="line_1dp_style" parent="line_style_color">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base1dp</item>
    </style>

    <style name="mine_20dp_20dp_rl">
        <item name="android:paddingLeft">@dimen/base20dp</item>
        <item name="android:paddingRight">@dimen/base20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



    <style name="mine_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_4d4d4d</item>
        <item name="android:textSize">@dimen/base16dp</item>
        <item name="android:paddingTop">@dimen/base16dp</item>
        <item name="android:paddingBottom">@dimen/base16dp</item>
    </style>

    <style name="line_20_20_style" parent="line_style_color">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base1dp</item>
        <item name="android:layout_marginLeft">@dimen/base20dp</item>
        <item name="android:layout_marginRight">@dimen/base20dp</item>
    </style>
    <style name="line_16_16_style" parent="line_style_color">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base1dp</item>
        <item name="android:layout_marginLeft">@dimen/base16dp</item>
        <item name="android:layout_marginRight">@dimen/base16dp</item>
    </style>

    <style name="toolbar_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/base16dp</item>
    </style>
    <style name="HintTextAppearance">
        <item name="android:textSize">@dimen/base14dp</item>
        <item name="android:textColor">@color/color_8e8e8e</item>
    </style>

    <style name="ErrorTextAppearance">
        <item name="android:textSize">@dimen/base14dp</item>
        <item name="android:textColor">@color/color_dd2c00</item>
    </style>


</resources>
